  [% if ({{ formats|tojson }}).includes(format) %]
  <div class="ap-m-teaser ap-m-teaser-guide-tutorial">
    <a href="{{ teaser_doc.url.path }}">

      {# tags #}
      {% do doc.styles.addCssFile('/css/components/molecules/tag.css') %}
